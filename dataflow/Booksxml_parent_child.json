{
	"name": "Booksxml_parent_child",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_blob_xml_bookdataset",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_Azure_SQL_DB_Books",
						"type": "DatasetReference"
					},
					"name": "Books"
				},
				{
					"dataset": {
						"referenceName": "ds_Azure_SQL_DB_Language",
						"type": "DatasetReference"
					},
					"name": "Language"
				}
			],
			"transformations": [
				{
					"name": "flatten1"
				},
				{
					"name": "split1"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "selectonlybookcolumns"
				},
				{
					"name": "selectonlylanguagecolumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          catalog as (book as ({@id} as string, author as string, description as string, genre as string, languages as (language as string[]), price as double, publish_date as date, title as string)[])",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     validationMode: 'none',",
				"     namespaces: true) ~> source1",
				"source1 foldDown(unrollMultiple(catalog.book,catalog.book.languages.language),",
				"     mapColumn(",
				"          book_id = catalog.book.{@id},",
				"          author = catalog.book.author,",
				"          description = catalog.book.description,",
				"          genre = catalog.book.genre,",
				"          language = catalog.book.languages.language,",
				"          price = catalog.book.price,",
				"          publish_date = catalog.book.publish_date,",
				"          title = catalog.book.title",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1",
				"derivedColumn2 split(1==1,",
				"     disjoint: false) ~> split1@(Parent, Child)",
				"flatten1 derive(id = uuid(),",
				"          Languageid = uuid()) ~> derivedColumn1",
				"derivedColumn1 derive({language.bookid} = id) ~> derivedColumn2",
				"split1@Parent select(mapColumn(",
				"          book_id,",
				"          author,",
				"          description,",
				"          genre,",
				"          price,",
				"          publish_date,",
				"          title,",
				"          id",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectonlybookcolumns",
				"split1@Child select(mapColumn(",
				"          language,",
				"          Languageid,",
				"          {language.bookid}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectonlylanguagecolumns",
				"selectonlybookcolumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          book_id,",
				"          author,",
				"          description,",
				"          genre,",
				"          price,",
				"          publish_date,",
				"          title,",
				"          id",
				"     )) ~> Books",
				"selectonlylanguagecolumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> Language"
			]
		}
	}
}